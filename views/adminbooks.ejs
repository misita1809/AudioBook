 <!--Main Site-->
 <main id="site-main">
    <div class="container">
        <div class="box-nav d-inline-block justify-between">
            <a href="/add-book" class="border-shadow p-2em">
                <span class="text-gradient">Add Book<i class="fa-solid fa-user-group"></i></span>
            </a>
        </div>

        <div class="box-nav d-inline-block justify-between">
            <a href="/" class="border-shadow p-2em">
                <span class="text-gradient">Log out<i class="fa-solid fa-user-group"></i></span>
            </a>
        </div>

        <form action="/" method="post">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Likes</th>
                        <th>Rating</th>
                        <th>Categories</th>
                        <!-- <th>Content</th> -->
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0;i<mybooks.length;i++) { %>
                        <tr>
                            <td>  <%= mybooks[i].id %> &nbsp;</td>
                            <td> <%= mybooks[i].title %> &nbsp;</td>
                            <td> <%= mybooks[i].author %> &nbsp;</td>
                           <td>  <%= mybooks[i].likes %> &nbsp;</td>
                            <td> <%= mybooks[i].rating %> &nbsp;</td>
                            <td> <%= mybooks[i].categories %> &nbsp;</td>
                            <!-- <td> <%= mybooks[i].content %> &nbsp;</td> -->
                            <td>
                                
                                <a href="/book/update/<%= mybooks[i].id %>" class="btn border-shadow update">
                                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                </a>
                                <a href="javascript:void(0);" onclick="delfun('<%= mybooks[i].id %>')" class="btn border-shadow delete">
                                    <span class="text-gradient"><i class="fas fa-times"></i></span>
                                </a>
                            </td>
                        </tr>
                    <% } %>
                    <!-- <tr>
                        <td>1</td>
