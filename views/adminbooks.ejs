                            </a>
                            <a class="btn border-shadow delete">
                                <span class="text-gradient"><i class="fas fa-times"></i></span>
                            </a>
                        </td>
                    </tr> -->
                </tbody>
            </table>
        </form>
    </div>
</main>
<!--Main Site-->
<script>
    function delfun(id){
        
       var result = confirm('Are you sure you want to delete this item?');
       if (result){
            window.location.href="/book/delete/"+id;
       }
    }
</script>
