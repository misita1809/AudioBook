                    </div>

                    <div class="form-group">
                        <label for="password" class="text-light">Password</label>
                        <input type="password" name="password" value="">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">LogIn</button>
                    </div>
                    <div class="form-group">
                        <a href="/register">Register Here</a>
                    </div>
                </div>
            </form>
